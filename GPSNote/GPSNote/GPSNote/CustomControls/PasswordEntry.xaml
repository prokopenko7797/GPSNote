<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GPSNote.CustomControls.PasswordEntry">
    <StackLayout>
        <Frame x:Name="frame"
               CornerRadius="2"
               BorderColor="{StaticResource System/LightGray}"
               BackgroundColor="{StaticResource TransparentColor}"
               Padding="8,0,8,0"
               HasShadow="False">

            <Grid ColumnDefinitions="0.9*, 0.1*">

                <Entry x:Name="entry"
                           Grid.Column="0"
                           HeightRequest="45"
                           TextChanged="OnTextChanged"
                           IsPassword="True"
                           MaxLength="16"
                           VerticalOptions="FillAndExpand"
                       >
                </Entry>

                <ImageButton x:Name="eyeButton"
                             Grid.Column="1"
                             VerticalOptions="Center"
                             Source="ic_eye_off.png"
                             BackgroundColor="{StaticResource TransparentColor}"
                             Clicked="EyeButtonClicked"
                             IsVisible="False"
                             Scale="1.2"/>

            </Grid>

        </Frame>
    </StackLayout>
</ContentView>