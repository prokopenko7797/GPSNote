<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="GPSNote.Views.MapPage"
             xmlns:maps="clr-namespace:Xamarin.Forms.GoogleMaps;assembly=Xamarin.Forms.GoogleMaps" 
             xmlns:custommap="clr-namespace:GPSNote.CustomControls.CustomMap"
             BackgroundColor="{AppThemeBinding Light={StaticResource LightPageBackgroundColor}, Dark={StaticResource DarkPageBackgroundColor}}"
             Title="{Binding Resources[MapTitle]}">

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="0.9*" />
        </Grid.RowDefinitions>
        
        <SearchBar Grid.Row="0" 
                   Placeholder="Search"
                   BackgroundColor="AliceBlue"
                   TextColor="Black"
                   PlaceholderColor="Gray"
                   Text="{Binding SearchBarText}" >

            <SearchBar.Behaviors>
                <prism:EventToCommandBehavior
                            EventName="TextChanged"
                            Command="{Binding TextChangedCommand}"
                            CommandParameter="MyParameter"  />
                <prism:EventToCommandBehavior 
                            EventName="Focused"
                            Command="{Binding FocusedCommand}"
                            CommandParameter="{Binding .}"/>

            </SearchBar.Behaviors>
        </SearchBar>


        <custommap:CustomMap Grid.Row="1"   PinsSelect ="{Binding PinList}" MoveTo="{Binding MoveTo}">
            <custommap:CustomMap.Behaviors>
                <prism:EventToCommandBehavior EventName="MapClicked"
                                              Command="{Binding ItemTappedCommand}"
                                              EventArgsParameterPath="Point" />
                
                <prism:EventToCommandBehavior EventName="PinClicked"
                                              Command="{Binding PinClickedCommand}"
                                              EventArgsParameterPath="Pin" />
            </custommap:CustomMap.Behaviors>
        </custommap:CustomMap>

        <Button Grid.Row="1" 
                Text="Move to selected" 
                Command="{Binding MoveToCommand}" 
                HorizontalOptions="Center" 
                VerticalOptions="Start"
                IsVisible="{Binding IsSelected}">
            
        </Button>


        <ListView Grid.Row="1" ItemsSource="{Binding PinObs}" 
                  RowHeight="50" 
                  HorizontalOptions="Center" 
                  VerticalOptions="Start"
                  SelectedItem="{Binding SelectedItem}"
                  x:Name="ListView1"
                  BackgroundColor="White"
                  IsVisible="{Binding IsListViewVisible}"
                  HeightRequest="{Binding HeightRequest}">


            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>

                        <Label Text="{Binding Label}" FontAttributes="Bold" />

                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <Grid Grid.Row="1" 
              BackgroundColor="{AppThemeBinding Light={StaticResource LightPageBackgroundColor}, Dark={StaticResource DarkPageBackgroundColor}}"
              IsVisible="{Binding IsPinTapped}"         
              VerticalOptions="End"
              HorizontalOptions="Center"
              Margin="0,0,0,20">
            
            <Label Text= "{Binding PinLabel}"
                   VerticalOptions="Center"
                   Grid.Row="0"/>
            
            <Label Text= "{Binding PinDescription}"
                   VerticalOptions="Center"
                   Grid.Row="1"/>
            
            <Grid Grid.Row="2">
                
                <Label Text= "{Binding PinLatitude}"
                       VerticalOptions="Center"
                       Grid.Column="0" />
                
                <Label Text= "{Binding PinLongitude}"
                       VerticalOptions="Center"
                       Grid.Column="1"/>
            </Grid>
        </Grid>
    </Grid>

</ContentPage>