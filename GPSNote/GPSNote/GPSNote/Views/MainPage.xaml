<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="GPSNote.Views.MainPage">

    <Grid Grid.RowDefinitions="0.8*, 0.1*, 0.1*"
          Padding="16,16,16,16">
        
        <Grid Grid.Row="0"
              Grid.RowDefinitions="0.2*,0.5*, 0.2*, 0.1*">

            <Image Grid.Row="1" 
                   Source="pic_enter_page.png"/>

            <Label Grid.Row="2"
                   Text="MapNotepad"
                   FontSize="24"
                   HorizontalOptions="Center"
                   TextColor="#596EFB"
                   FontAttributes="Bold"
                   LineHeight="150"
                   CharacterSpacing="1"/>

        </Grid>
        
        <Button Grid.Row="1" 
                Text="Log in" 
                BackgroundColor="#596EFB"
                TextColor="#FFFF"
                Command="{Binding LogInCommand}"></Button>

        <Button Grid.Row="2" 
                Text="Create account" 
                BackgroundColor="#FFFF"
                Command="{Binding CreateAccountCommand}"
                BorderColor="#596EFB"
                BorderWidth="2"
                TextColor="#596EFB"></Button>
        
    </Grid>
    
</ContentPage>